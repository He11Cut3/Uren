@model HellsTireProduct
<!-- Begin Uren's Single Product Affiliate Area -->
<div class="sp-area sp-affiliate_area">
    <div class="container-fluid">
        <div class="sp-nav">
            <div class="row">
                <div class="col-lg-4">
                    <div class="sp-img_area">
                        @if (Model.HellsTireProductImage != null)
                        {
                            var base64 = Convert.ToBase64String(Model.HellsTireProductImage);
                            var imgSrc = string.Format("data:image/png;base64,{0}", base64);
                            <img class="primary-img" src="@imgSrc" alt="Uren's Product Image">
                        }
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="sp-content">
                        <div class="sp-heading">
                            <h5><a>@Model.HellsTireProductName</a></h5>
                        </div>
                        <span class="reference">@Model.HellsTireProductBrand</span>
                        <div class="rating-box">
                            <ul>
                                <li><i class="ion-android-star"></i></li>
                                <li><i class="ion-android-star"></i></li>
                                <li><i class="ion-android-star"></i></li>
                                <li class="silver-color"><i class="ion-android-star"></i></li>
                                <li class="silver-color"><i class="ion-android-star"></i></li>
                            </ul>
                        </div>
                        <div class="sp-essential_stuff">
                            <ul>
                                <li>Наличие: <a href="javascript:void(0)">В наличии</a></li>
                                <li>Стоимость: <a href="javascript:void(0)"><span>@Model.HellsTireProductPrice ₽</span></a></li>
                            </ul>
                        </div>
                        <div class="qty-btn_area">
                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.HellsTireProductID" class="qty-buy_btn">Добавить в корзину</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Begin Uren's Single Product Tab Area -->
<div class="sp-product-tab_area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sp-product-tab_nav">
                    <div class="tab-content uren-tab_content">
                        <div id="description" class="tab-pane active show" role="tabpanel">
                            <div class="product-description">
                                <ul>
                                    <li>
                                        <strong>Характеристики</strong>
                                        <span>@Html.Raw(Model.HellsTireProductDescriptions)</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Uren's Single Product Tab Area End Here -->
<!-- Uren's Single Product Affiliate Area End Here -->