
<!-- Begin Uren's Header Main Area -->
<header class="header-main_area bg--sapphire">
    <div class="header-top_area d-lg-block d-none">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-7 col-lg-8">
                    <div class="main-menu_area position-relative">
                        <nav class="main-nav">
                            <ul>
                                <li class="dropdown-holder">
                                    <a href="@Url.Action("Index", "Home", new { area = "" })">Главная страница</a>
                                </li>
                                <li class="dropdown-holder">
                                    <a asp-controller="Shop" asp-action="Index">Товары</a>
                                </li>
                                <li class="dropdown-holder">
                                    <a asp-controller="About" asp-action="Index">О нас</a>
                                </li>
                                <li class="dropdown-holder">
                                    <a asp-controller="Contact" asp-action="Index">Контакты</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="col-xl-5 col-lg-4">
                    <div class="ht-right_area">
                        <div class="ht-menu">
                            <ul>
                                <li>
                                    @if (User.Identity?.IsAuthenticated ?? false)
                                    {
                                        <li class="nav-item">
                                            <a asp-controller="Account" asp-action="Logout">Привет, @User.Identity.Name, Выход</a>
                                        </li>
                                        <li class="nav-item">
                                        <a asp-controller="Account" asp-action="ViewHistory">История заказов</a>
                                        </li>
                                            @if (User.IsInRole("Admin") || User.IsInRole("Editor") )
                                            {
                                            <li class="nav-item">
                                                <a  asp-area="Admin" asp-controller="Product" asp-action="Index">Вход в панель администрирования</a>
                                            </li>
                                            }
                                    }
                                    else
                                    {
                                    <li class="nav-item">
                                        <a  asp-controller="Account" asp-action="Login">Вход</a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Account" asp-action="Create">Регистрация</a>
                                    </li>
                                    }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-middle_area">
        <div class="container-fluid">
            <div class="row">
                <div class="custom-logo_col col-12">
                    <div class="header-logo_area">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/assets/images/menu/logo/1.png" alt="Uren's Logo">
                        </a>
                    </div>
                </div>
                <div class="custom-category_col col-12">
                    <div class="category-menu category-menu-hidden">
                        <div class="category-heading">
                            <h2 class="categories-toggle">
                                <span>Каталог</span>
                            </h2>
                        </div>
                        <div id="cate-toggle" class="category-menu-list">
                            <ul>
                                
                                <li><a href="shop-left-sidebar.html"><vc:categories/></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <vc:small-cart />
                
            </div>
        </div>
    </div>
</header>
<!-- Uren's Header Main Area End Here -->